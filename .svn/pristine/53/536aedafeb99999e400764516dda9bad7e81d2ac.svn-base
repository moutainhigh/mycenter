<script type="text/javascript">
$(function(){
    // 城市切换
    $('#hhDrop00').hhDrop({});
    $('#hhDrop01').hhDrop({});  

    $('a.more').bind('click', function () { 
        var txt = $(this).text(); 
        if (txt == '展开') { 
            $(this).parent().find(".morediv").show();
            $(this).text('收起').addClass('top-arr'); 
        } else { 
            $(this).parent().find(".morediv").hide();
            $(this).text('展开').removeClass('top-arr'); 
        } 
    })  
});
</script>